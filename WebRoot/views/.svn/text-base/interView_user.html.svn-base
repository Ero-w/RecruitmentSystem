    <!-- left, vertical navbar & content -->
    <div class="row">
        <div class="col-md-12 bootstrap-admin-col-left">
            <ul class="nav nav-pills pull-left">
                <li class="active" name="add" onclick="changeView(this)">
                    <a href="#add">求职中心</a>
