<div class="bs-docs-header" id="content">
      <div class="container">
        <h1>员工招聘管理系统</h1>
        <p>欢迎使用员工招聘管理系统！</p>
      </div>
    </div>
    <div class="container">
        <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label">账号</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="account" placeholder="账号">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">密码</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="password" placeholder="密码">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">姓名</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="realName" placeholder="姓名">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">邮箱</label>
            <div class="col-sm-9">
              <input type="email" class="form-control" id="email" placeholder="邮箱">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">电话</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="phoneNum" placeholder="电话">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
              <button type="button" class="btn btn-info" id="loginbtn">注册</button>
              <button type="reset" class="btn btn-info">重置</button>
            </div>
          </div>
        </form>
        </div>
        <div class="col-md-4"></div>
        </div>
    </div>



<script type="text/javascript" src="/demo/js/jquery-1.8.2.min.js"></script>
<script type="text/javascript" src="/demo/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $("#loginbtn").click(function(){
	  	    var account = $("#account").val();
	    	var realName = $("#realName").val();
	    	var phoneNum = $("#phoneNum").val();
	    	var email = $("#email").val();
	    	var password = $("#password").val();
			if(!account||!realName||!phoneNum||!password||!email){
				alert("必填信息不能为空");
				return;
			}
			
	    	var dataSrc = {
	            	"account":account,
	            	"password":password,
	            	"email":email,
	            	"realName":realName,
	            	"phoneNum":phoneNum
	            	
	            };
	            
    	$.ajax({     
    	    url:encodeURI(encodeURI('/demo/user/register')),      
    	    type:'POST',    
            contentType:"application/json",
            data:JSON.stringify(dataSrc),
    	    cache:false,  
    	    success:function(data) {  
    	    console.log(data)   
    	      if(data.result != true){  
    	           alert(data.msg); 
    	      }else{     
    	           window.location.href="/demo/user/login";
    	       }     
    	     },     
    	    error : function() {  
    	          alert("服务器忙，稍后重试！");     
    	      }}
    	 )

    	
    })
    	
  
  
  </script>

</body>
