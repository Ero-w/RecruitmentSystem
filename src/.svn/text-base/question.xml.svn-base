<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

    <package name="question" extends="struts-default" namespace="/">
		
	</package>

	<package name="question_api" extends="json-default" namespace="/">
	<!-- name 最好有自己的前缀，避免与别人的路由文件冲突，会报NoSuchMethodException  -->
	<!-- *表示通配符，{1}表示第一个通配符代表的字符串。   例如，访问/qu_login  会调用 login方法，因为这时候 *={1}=login -->
		<action name="qu_*" class="check" method="{1}">

			<result type="json">
			<param name="root">map</param>
			</result>
		</action>
		<action name="add" class="add" method="add">
		</action>
		<action name="save" class="save" method="save">
		</action>
		<action name="checkInter" class="checkInter" method="check">
		</action>
		<action name="saveInter" class="saveInter" method="save">
		</action>
    </package>

</struts>    
